
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /user_settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /report_card_history/{historyId} {
      // Users can query the collection, but only for their own documents.
      // The client-side query MUST include `where('userId', '==', request.auth.uid)`.
      allow list: if isSignedIn();
      
      // Users can read, create, update, or delete a document if they are the owner.
      allow read, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
  }
}
